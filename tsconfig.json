{
  "compilerOptions": {
    /* ===== Output ===== */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    /* ===== TypeScript Options ===== */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ===== Debug & Tools ===== */
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
